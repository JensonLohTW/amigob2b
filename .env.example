# AMIGO 寵物鮮食自動販賣機加盟平台 - 環境變數配置範例
# 複製此文件為 .env.local 並填入實際值

# =============================================================================
# 基本配置
# =============================================================================

# 網站基本信息
NEXT_PUBLIC_SITE_NAME="AMIGO 寵物鮮食自動販賣機"
NEXT_PUBLIC_SITE_URL="https://amigob2b.vercel.app"
NEXT_PUBLIC_SITE_DESCRIPTION="專業的寵物鮮食自動販賣機加盟招商平台"

# 環境設定
NODE_ENV="development"
NEXT_PUBLIC_ENV="development"

# =============================================================================
# 數據庫配置（如果使用）
# =============================================================================

# PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/amigob2b"

# MongoDB
MONGODB_URI="mongodb://localhost:27017/amigob2b"

# =============================================================================
# 認證服務
# =============================================================================

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth
FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"

# =============================================================================
# 郵件服務
# =============================================================================

# SMTP 配置
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# SendGrid
SENDGRID_API_KEY="your-sendgrid-api-key"

# Mailgun
MAILGUN_API_KEY="your-mailgun-api-key"
MAILGUN_DOMAIN="your-mailgun-domain"

# =============================================================================
# 雲端服務
# =============================================================================

# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="ap-northeast-1"
AWS_S3_BUCKET="amigo-uploads"

# Cloudinary
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# =============================================================================
# 分析和監控
# =============================================================================

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"

# Google Tag Manager
NEXT_PUBLIC_GTM_ID="GTM-XXXXXXX"

# Sentry
SENTRY_DSN="your-sentry-dsn"
NEXT_PUBLIC_SENTRY_DSN="your-public-sentry-dsn"

# Hotjar
NEXT_PUBLIC_HOTJAR_ID="your-hotjar-id"

# =============================================================================
# 支付服務
# =============================================================================

# Stripe
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# PayPal
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"

# =============================================================================
# API 服務
# =============================================================================

# 內部 API
API_BASE_URL="http://localhost:3000/api"
API_SECRET_KEY="your-api-secret-key"

# 第三方 API
EXTERNAL_API_KEY="your-external-api-key"
EXTERNAL_API_URL="https://api.example.com"

# =============================================================================
# 快取服務
# =============================================================================

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="your-redis-password"

# =============================================================================
# 檔案上傳
# =============================================================================

# 上傳限制
MAX_FILE_SIZE="10485760" # 10MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# =============================================================================
# 安全設定
# =============================================================================

# JWT
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRES_IN="7d"

# 加密
ENCRYPTION_KEY="your-encryption-key"

# CORS
CORS_ORIGIN="http://localhost:3000"

# =============================================================================
# 開發工具
# =============================================================================

# 調試模式
DEBUG="true"
VERBOSE_LOGGING="true"

# 開發者工具
NEXT_PUBLIC_SHOW_DEV_TOOLS="true"

# =============================================================================
# 部署配置
# =============================================================================

# Vercel
VERCEL_URL="your-vercel-url"
VERCEL_ENV="development"

# 自定義域名
CUSTOM_DOMAIN="amigo.com.tw"

# =============================================================================
# 業務配置
# =============================================================================

# 聯繫信息
NEXT_PUBLIC_CONTACT_EMAIL="info@amigo.com.tw"
NEXT_PUBLIC_CONTACT_PHONE="0800-123-456"
NEXT_PUBLIC_SUPPORT_EMAIL="support@amigo.com.tw"

# 社交媒體
NEXT_PUBLIC_FACEBOOK_URL="https://facebook.com/amigo"
NEXT_PUBLIC_INSTAGRAM_URL="https://instagram.com/amigo"
NEXT_PUBLIC_YOUTUBE_URL="https://youtube.com/amigo"

# 業務設定
FRANCHISE_FEE="100000"
MONTHLY_REVENUE_TARGET="70000"
ROI_PERCENTAGE="20"

# =============================================================================
# 功能開關
# =============================================================================

# 功能標誌
NEXT_PUBLIC_ENABLE_BLOG="true"
NEXT_PUBLIC_ENABLE_CALCULATOR="true"
NEXT_PUBLIC_ENABLE_APPLICATION="true"
NEXT_PUBLIC_ENABLE_CHAT="false"

# 維護模式
MAINTENANCE_MODE="false"
MAINTENANCE_MESSAGE="網站維護中，請稍後再試"

# =============================================================================
# 本地化
# =============================================================================

# 語言設定
NEXT_PUBLIC_DEFAULT_LOCALE="zh-TW"
NEXT_PUBLIC_SUPPORTED_LOCALES="zh-TW,en-US"

# 時區
NEXT_PUBLIC_TIMEZONE="Asia/Taipei"

# =============================================================================
# 注意事項
# =============================================================================

# 1. 將此文件複製為 .env.local
# 2. 填入實際的配置值
# 3. 不要將包含敏感信息的 .env.local 提交到版本控制
# 4. 生產環境請使用強密碼和安全的密鑰
# 5. 定期更新 API 密鑰和憑證
